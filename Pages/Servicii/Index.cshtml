@page
@model Proiect_MDP_Web.Pages.Servicii.IndexModel

@{
    ViewData["Title"] = "Servicii";
}

<h1>Servicii</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Serviciu[0].TipServiciu)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Serviciu[0].Client)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Serviciu[0].Racheta)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Serviciu[0].Racheta.Firma)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Serviciu[0].ReturnDate)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Serviciu) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TipServiciu)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Client.NumeComplet)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Racheta.Denumire)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Racheta.Firma.DenumireFirma)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ReturnDate)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
