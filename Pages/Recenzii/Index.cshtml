@page
@model Proiect_MDP_Web.Pages.Recenzii.IndexModel

@{
    ViewData["Title"] = "Recenzii";
}

<h1>Recenzii</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Recenzie[0].Titlu)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Recenzie[0].Comentariu)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Recenzie[0].Rating)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Recenzie[0].Client)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Recenzie[0].Racheta)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Recenzie[0].Racheta.Firma)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Recenzie) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Titlu)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Comentariu)
            </td>
            <td>
                @Html.Raw(new string('⭐', item.Rating))
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Client.NumeComplet)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Racheta.Denumire)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Racheta.Firma.DenumireFirma)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
